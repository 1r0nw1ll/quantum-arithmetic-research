{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "QA_MATH_COMPILER_REPLAY_BUNDLE_SCHEMA.v1",
  "title": "QA_MATH_COMPILER_REPLAY_BUNDLE_SCHEMA.v1",
  "description": "Deterministic replay benchmark bundle for QA Math Compiler traces.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "bundle_id",
    "created_utc",
    "toolchain",
    "benchmark",
    "traces",
    "metrics",
    "invariant_diff"
  ],
  "properties": {
    "schema_id": {
      "const": "QA_MATH_COMPILER_REPLAY_BUNDLE_SCHEMA.v1"
    },
    "bundle_id": {
      "type": "string",
      "minLength": 1
    },
    "created_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
    },
    "toolchain": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "lean_version",
        "lake_lock_hash",
        "toolchain_hash"
      ],
      "properties": {
        "lean_version": {
          "type": "string",
          "minLength": 1
        },
        "lake_lock_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "toolchain_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    },
    "benchmark": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "trace_count",
        "min_replay_rate"
      ],
      "properties": {
        "trace_count": {
          "type": "integer",
          "minimum": 1
        },
        "min_replay_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "traces": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "trace_id",
          "seed",
          "trace_hash",
          "replay_hash",
          "result_status",
          "replay_status"
        ],
        "properties": {
          "trace_id": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "seed": {
            "type": "integer",
            "minimum": 0
          },
          "trace_hash": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "replay_hash": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "result_status": {
            "type": "string",
            "enum": ["SUCCESS", "FAIL"]
          },
          "replay_status": {
            "type": "string",
            "enum": ["SUCCESS", "FAIL", "INFRA_FLAKE"]
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "deterministic_replays",
        "total_replays",
        "replay_successes",
        "replay_rate",
        "infra_flake_count"
      ],
      "properties": {
        "deterministic_replays": {
          "type": "integer",
          "minimum": 0
        },
        "total_replays": {
          "type": "integer",
          "minimum": 0
        },
        "replay_successes": {
          "type": "integer",
          "minimum": 0
        },
        "replay_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "infra_flake_count": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "invariant_diff": {
      "type": "object"
    }
  }
}

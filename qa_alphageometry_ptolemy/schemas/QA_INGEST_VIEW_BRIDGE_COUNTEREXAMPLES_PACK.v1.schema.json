{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "QA_INGEST_VIEW_BRIDGE_COUNTEREXAMPLES_PACK.v1.schema.json",
  "title": "QA Ingest View Bridge Counterexamples Pack v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "manifest",
    "store_semantics_schema_id",
    "view_semantics_schema_id",
    "bridge_semantics_schema_id",
    "store_root_snapshot",
    "view_root_snapshot",
    "ingest_root_snapshot",
    "cases"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "QA_INGEST_VIEW_BRIDGE_COUNTEREXAMPLES_PACK.v1" },
    "manifest": {
      "type": "object",
      "additionalProperties": false,
      "required": ["hash_alg", "canonical_json_sha256"],
      "properties": {
        "hash_alg": { "type": "string", "enum": ["sha256"] },
        "canonical_json_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    },
    "store_semantics_schema_id": { "type": "string", "const": "QA_DATASTORE_SEMANTICS_CERT.v1" },
    "view_semantics_schema_id": { "type": "string", "const": "QA_DATASTORE_VIEW_CERT.v1" },
    "bridge_semantics_schema_id": { "type": "string", "const": "QA_INGEST_VIEW_BRIDGE_CERT.v1" },
    "store_root_snapshot": { "$ref": "QA_INGEST_VIEW_BRIDGE_WITNESS_PACK.v1.schema.json#/properties/store_root_snapshot" },
    "view_root_snapshot": { "$ref": "QA_INGEST_VIEW_BRIDGE_WITNESS_PACK.v1.schema.json#/properties/view_root_snapshot" },
    "view_root_snapshots": { "$ref": "QA_INGEST_VIEW_BRIDGE_WITNESS_PACK.v1.schema.json#/properties/view_root_snapshots" },
    "ingest_root_snapshot": { "$ref": "QA_INGEST_VIEW_BRIDGE_WITNESS_PACK.v1.schema.json#/properties/ingest_root_snapshot" },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["case_id", "expected_fail_type", "tamper_mode", "entries"],
        "properties": {
          "case_id": { "type": "string", "minLength": 1 },
          "expected_fail_type": { "type": "string", "minLength": 1 },
          "tamper_mode": { "type": "string", "minLength": 1 },
          "entries": { "$ref": "QA_INGEST_VIEW_BRIDGE_WITNESS_PACK.v1.schema.json#/properties/entries" }
        }
      }
    }
  }
}

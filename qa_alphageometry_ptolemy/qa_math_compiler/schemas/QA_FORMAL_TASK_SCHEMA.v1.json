{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "QA_FORMAL_TASK_SCHEMA.v1",
  "title": "QA_FORMAL_TASK_SCHEMA.v1",
  "description": "Canonical task object for Lean autoformalization replay.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "task_id",
    "created_utc",
    "formal_goal",
    "imports",
    "context",
    "constraints",
    "invariant_diff"
  ],
  "properties": {
    "schema_id": {
      "const": "QA_FORMAL_TASK_SCHEMA.v1"
    },
    "task_id": {
      "type": "string",
      "minLength": 1
    },
    "created_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
    },
    "nl_statement": {
      "type": ["string", "null"]
    },
    "formal_goal": {
      "type": "string",
      "minLength": 1
    },
    "imports": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "context": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "max_seconds",
        "max_memory_mb",
        "allowed_tactics"
      ],
      "properties": {
        "max_seconds": {
          "type": "integer",
          "minimum": 1
        },
        "max_memory_mb": {
          "type": "integer",
          "minimum": 1
        },
        "allowed_tactics": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "invariant_diff": {
      "type": "object"
    }
  }
}

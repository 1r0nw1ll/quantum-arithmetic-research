{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "QA_DATASTORE_WITNESS_PACK.v1.schema.json",
  "title": "QA Datastore Witness Pack v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_id", "semantics_schema_id", "root_snapshot", "tests", "manifest"],
  "properties": {
    "schema_id": { "type": "string", "const": "QA_DATASTORE_WITNESS_PACK.v1" },
    "semantics_schema_id": { "type": "string", "const": "QA_DATASTORE_SEMANTICS_CERT.v1" },
    "root_snapshot": {
      "description": "Declared root hash used by tests.",
      "type": "object",
      "additionalProperties": false,
      "required": ["root_hash", "hash_alg"],
      "properties": {
        "root_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "hash_alg": { "type": "string", "enum": ["sha256"] },
        "snapshot_id": { "type": "string" },
        "keys": {
          "description": "Optional sorted key list for non-inclusion guardrails.",
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "keys_hash": {
          "description": "Optional domain-separated hash over root_snapshot.keys.",
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        }
      }
    },
    "tests": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["test_id", "op", "key", "expected", "proof"],
        "properties": {
          "test_id": { "type": "string", "minLength": 1 },
          "op": { "type": "string", "enum": ["GET"] },
          "key": { "type": "string", "minLength": 1 },
          "expected": {
            "description": "Either a record object or null when key is absent.",
            "anyOf": [
              { "type": "null" },
              { "type": "object" }
            ]
          },
          "proof": { "$ref": "QA_MERKLE_PROOF.v1.schema.json" }
        }
      }
    },
    "manifest": {
      "type": "object",
      "additionalProperties": false,
      "required": ["hash_alg", "canonical_json_sha256"],
      "properties": {
        "hash_alg": { "type": "string", "enum": ["sha256"] },
        "canonical_json_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    }
  }
}

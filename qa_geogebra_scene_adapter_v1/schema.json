{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "QA_GEOGEBRA_SCENE_ADAPTER.v1.schema.json",
  "title": "QA_GEOGEBRA_SCENE_ADAPTER.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "cert_type",
    "cert_id",
    "created_utc",
    "compute_substrate",
    "source_semantics",
    "base_algebra",
    "scene",
    "derivation",
    "result",
    "determinism_contract"
  ],
  "properties": {
    "schema_version": { "type": "string", "enum": ["v1"] },
    "cert_type": { "type": "string", "enum": ["QA_GEOGEBRA_SCENE_ADAPTER.v1"] },
    "cert_id": { "type": "string", "minLength": 1 },
    "created_utc": { "type": "string", "minLength": 1 },
    "compute_substrate": {
      "type": "string",
      "enum": ["qa_rational_pair_noreduce"]
    },
    "source_semantics": {
      "type": "object",
      "additionalProperties": false,
      "required": ["upstream", "export"],
      "properties": {
        "upstream": {
          "type": "object",
          "additionalProperties": true,
          "required": ["name"],
          "properties": {
            "name": { "type": "string", "minLength": 1 },
            "app_url": { "type": "string" },
            "repo_url": { "type": "string" }
          }
        },
        "export": {
          "type": "object",
          "additionalProperties": true,
          "required": ["format"],
          "properties": {
            "format": { "type": "string", "enum": ["geogebra_scene_export_v1"] },
            "exported_by": { "type": "string" }
          }
        }
      }
    },
    "base_algebra": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "properties"],
      "properties": {
        "name": { "type": "string" },
        "properties": {
          "type": "object",
          "additionalProperties": false,
          "required": ["integral_domain", "field", "no_zero_divisors"],
          "properties": {
            "integral_domain": { "type": "boolean" },
            "field": { "type": "boolean" },
            "no_zero_divisors": { "type": "boolean" }
          }
        }
      }
    },
    "scene": {
      "type": "object",
      "additionalProperties": false,
      "required": ["coordinate_system", "scene_raw", "scene_raw_sha256"],
      "properties": {
        "coordinate_system": { "type": "string", "enum": ["XYZ"] },
        "scene_raw": { "type": "object" },
        "scene_raw_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
      }
    },
    "derivation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["parsed_objects", "steps"],
      "properties": {
        "parsed_objects": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["object_id", "object_type", "label", "vertices", "faces"],
            "properties": {
              "object_id": { "type": "string", "minLength": 1 },
              "object_type": { "type": "string", "enum": ["TRIANGLE"] },
              "label": { "type": "string" },
              "vertices": {
                "type": "array",
                "minItems": 3,
                "maxItems": 3,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["id", "coord"],
                  "properties": {
                    "id": { "type": "string", "enum": ["A", "B", "C"] },
                    "coord": {
                      "type": "array",
                      "minItems": 3,
                      "maxItems": 3,
                      "items": {
                        "oneOf": [
                          {
                            "type": "object",
                            "additionalProperties": false,
                            "required": ["k", "v"],
                            "properties": {
                              "k": { "type": "string", "enum": ["Z"] },
                              "v": { "type": "integer" }
                            }
                          },
                          {
                            "type": "object",
                            "additionalProperties": false,
                            "required": ["k", "n", "d"],
                            "properties": {
                              "k": { "type": "string", "enum": ["Q"] },
                              "n": { "type": "integer" },
                              "d": { "type": "integer" }
                            }
                          }
                        ]
                      }
                    }
                  }
                }
              },
              "faces": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 3,
                  "items": { "type": "string", "enum": ["A", "B", "C"] }
                }
              }
            }
          }
        },
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["step_id", "move_id", "inputs", "outputs", "step_hash_sha256"],
            "properties": {
              "step_id": { "type": "string", "minLength": 1 },
              "move_id": {
                "type": "string",
                "enum": [
                  "GG_PARSE_SCENE",
                  "RT_COMPUTE_TRIANGLE_INVARIANTS",
                  "RT_VALIDATE_LAW_EQUATION"
                ]
              },
              "inputs": { "type": "object" },
              "outputs": { "type": "object" },
              "step_hash_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
            }
          }
        }
      }
    },
    "result": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rt_invariants"],
      "properties": {
        "rt_invariants": {
          "type": "object",
          "additionalProperties": false,
          "required": ["triangles"],
          "properties": {
            "triangles": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["triangle_object_id", "Q", "s"],
                "properties": {
                  "triangle_object_id": { "type": "string", "minLength": 1 },
                  "Q": {
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3,
                    "items": { "type": "integer" }
                  },
                  "s": {
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3,
                    "items": {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["n", "d"],
                      "properties": {
                        "n": { "type": "integer" },
                        "d": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "invariant_diff": { "type": "object" }
      }
    },
    "determinism_contract": {
      "type": "object",
      "additionalProperties": false,
      "required": ["canonical_json", "stable_sorting", "no_rng", "invariant_diff_defined"],
      "properties": {
        "canonical_json": { "type": "boolean" },
        "stable_sorting": { "type": "boolean" },
        "no_rng": { "type": "boolean" },
        "invariant_diff_defined": { "type": "boolean" }
      }
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QA_KONA_EBM_QA_NATIVE_CERT.v1",
  "type": "object",
  "required": [
    "cert_type",
    "schema_version",
    "cert_id",
    "issued_utc",
    "model_config",
    "result",
    "trace"
  ],
  "properties": {
    "cert_type": {
      "type": "string",
      "const": "QA_KONA_EBM_QA_NATIVE_CERT.v1"
    },
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "cert_id": {
      "type": "string",
      "minLength": 1
    },
    "issued_utc": {
      "type": "string",
      "minLength": 1
    },
    "model_config": {
      "type": "object",
      "required": [
        "n_visible",
        "n_samples",
        "n_epochs",
        "lr",
        "seed",
        "algorithm"
      ],
      "properties": {
        "n_visible": {
          "type": "integer"
        },
        "n_samples": {
          "type": "integer"
        },
        "n_epochs": {
          "type": "integer"
        },
        "lr": {
          "type": "number"
        },
        "seed": {
          "type": "integer"
        },
        "algorithm": {
          "type": "string",
          "const": "rbm_qa_native_cd1_numpy"
        }
      },
      "additionalProperties": false
    },
    "result": {
      "type": "object",
      "required": [
        "status",
        "energy_per_epoch",
        "reconstruction_error_per_epoch",
        "grad_norm_per_epoch",
        "final_weights_norm",
        "invariant_diff",
        "orbit_analysis"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "CONVERGED",
            "STALLED",
            "GRADIENT_EXPLOSION"
          ]
        },
        "energy_per_epoch": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "reconstruction_error_per_epoch": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "grad_norm_per_epoch": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "final_weights_norm": {
          "type": "number"
        },
        "invariant_diff": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object",
              "required": [
                "fail_type",
                "target_path",
                "reason"
              ],
              "properties": {
                "fail_type": {
                  "type": "string"
                },
                "target_path": {
                  "type": "string"
                },
                "reason": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "orbit_analysis": {
          "type": "object",
          "required": [
            "orbit_class_alignment",
            "orbit_coherence_score",
            "orbit_dominant_class",
            "orbit_map_hash",
            "coherence_gap_stats"
          ],
          "properties": {
            "orbit_class_alignment": {
              "type": "object",
              "required": [
                "COSMOS",
                "SATELLITE",
                "SINGULARITY"
              ],
              "properties": {
                "COSMOS": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 10,
                  "maxItems": 10
                },
                "SATELLITE": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 10,
                  "maxItems": 10
                },
                "SINGULARITY": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 10,
                  "maxItems": 10
                }
              },
              "additionalProperties": false
            },
            "orbit_coherence_score": {
              "type": "object",
              "required": [
                "COSMOS",
                "SATELLITE",
                "SINGULARITY"
              ],
              "properties": {
                "COSMOS": {
                  "type": "number"
                },
                "SATELLITE": {
                  "type": "number"
                },
                "SINGULARITY": {
                  "type": "number"
                }
              },
              "additionalProperties": false
            },
            "orbit_dominant_class": {
              "type": "object",
              "required": [
                "COSMOS",
                "SATELLITE",
                "SINGULARITY"
              ],
              "properties": {
                "COSMOS": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 9
                },
                "SATELLITE": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 9
                },
                "SINGULARITY": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 9
                }
              },
              "additionalProperties": false
            },
            "orbit_map_hash": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            },
            "coherence_gap_stats": {
              "type": "object",
              "description": "Permutation gap test for orbit coherence (100 permutations, seeded).",
              "properties": {
                "COSMOS": {
                  "$ref": "#/definitions/gap_stat"
                },
                "SATELLITE": {
                  "$ref": "#/definitions/gap_stat"
                },
                "SINGULARITY": {
                  "$ref": "#/definitions/gap_stat"
                }
              },
              "required": [
                "COSMOS",
                "SATELLITE",
                "SINGULARITY"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "trace": {
      "type": "object",
      "required": [
        "trace_hash"
      ],
      "properties": {
        "trace_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "gap_stat": {
      "type": "object",
      "properties": {
        "c_real": {
          "type": "number"
        },
        "c_perm_mean": {
          "type": "number"
        },
        "c_perm_std": {
          "type": "number"
        },
        "z_score": {
          "type": "number"
        },
        "p_value": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": [
        "c_real",
        "c_perm_mean",
        "c_perm_std",
        "z_score",
        "p_value"
      ]
    }
  }
}

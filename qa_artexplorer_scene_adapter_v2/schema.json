{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "QA_ARTEXPLORER_SCENE_ADAPTER.v2.schema.json",
  "title": "QA_ARTEXPLORER_SCENE_ADAPTER.v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "cert_type",
    "cert_id",
    "created_utc",
    "source_semantics",
    "base_algebra",
    "scene",
    "derivation",
    "result",
    "determinism_contract"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "v2" },
    "cert_type": { "type": "string", "const": "QA_ARTEXPLORER_SCENE_ADAPTER.v2" },
    "cert_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]{8,200}$"
    },
    "created_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
    },
    "compute_substrate": {
      "type": "string",
      "enum": ["qa_rational_pair_noreduce"]
    },

    "source_semantics": {
      "type": "object",
      "additionalProperties": false,
      "required": ["upstream", "export"],
      "properties": {
        "upstream": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "repo_url", "app_url"],
          "properties": {
            "name": { "type": "string", "minLength": 1 },
            "repo_url": { "type": "string", "minLength": 1 },
            "app_url": { "type": "string", "minLength": 1 }
          }
        },
        "export": {
          "type": "object",
          "additionalProperties": false,
          "required": ["format"],
          "properties": {
            "format": { "type": "string", "enum": ["artexplorer_scene_json"] },
            "exported_by": { "type": "string" },
            "exported_at_utc": { "type": "string" }
          }
        }
      }
    },

    "base_algebra": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "properties"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "properties": {
          "type": "object",
          "additionalProperties": false,
          "required": ["integral_domain", "field", "no_zero_divisors"],
          "properties": {
            "integral_domain": { "type": "boolean" },
            "field": { "type": "boolean" },
            "no_zero_divisors": { "type": "boolean" }
          }
        }
      }
    },

    "scene": {
      "type": "object",
      "additionalProperties": false,
      "required": ["scene_raw", "coordinate_system"],
      "properties": {
        "coordinate_system": { "type": "string", "enum": ["XYZ", "WXYZ"] },
        "scene_raw": { "type": "object" },
        "scene_raw_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "zero_sum_normalized": { "type": "boolean" }
      }
    },

    "derivation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["parsed_objects", "steps"],
      "properties": {
        "parsed_objects": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["object_id", "object_type", "vertices"],
            "properties": {
              "object_id": { "type": "string", "minLength": 1 },
              "object_type": {
                "type": "string",
                "enum": ["POINT_SET", "EDGE_SET", "TRIANGLE", "MESH", "POLYHEDRON"]
              },
              "label": { "type": "string" },
              "vertices": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["id", "coord"],
                  "properties": {
                    "id": { "type": "string", "minLength": 1 },
                    "coord": {
                      "type": "array",
                      "minItems": 3,
                      "maxItems": 4,
                      "items": { "type": "integer" }
                    }
                  }
                }
              },
              "faces": {
                "type": "array",
                "items": {
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 3,
                  "items": { "type": "string" }
                }
              }
            }
          }
        },
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["step_id", "move_id", "inputs", "outputs", "step_hash_sha256"],
            "properties": {
              "step_id": { "type": "string", "minLength": 1 },
              "move_id": {
                "type": "string",
                "enum": [
                  "ART_PARSE_SCENE",
                  "ART_NORMALIZE_WXYZ_ZERO_SUM",
                  "ART_PROJECT_WXYZ_TO_XYZ",
                  "RT_COMPUTE_TRIANGLE_INVARIANTS",
                  "RT_VALIDATE_LAW_EQUATION",
                  "RT_REDUCE_FRACTION"
                ]
              },
              "inputs": { "type": "object" },
              "outputs": { "type": "object" },
              "step_hash_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
            }
          }
        }
      }
    },

    "result": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rt_invariants"],
      "properties": {
        "rt_invariants": {
          "type": "object",
          "additionalProperties": false,
          "required": ["triangles"],
          "properties": {
            "triangles": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["triangle_object_id", "Q", "s"],
                "properties": {
                  "triangle_object_id": { "type": "string", "minLength": 1 },
                  "Q": {
                    "type": "array",
                    "minItems": 3, "maxItems": 3,
                    "items": { "type": "integer" }
                  },
                  "s": {
                    "type": "array",
                    "minItems": 3, "maxItems": 3,
                    "items": {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["n", "d"],
                      "properties": {
                        "n": { "type": "integer" },
                        "d": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "invariant_diff": {
          "type": "object"
        },
        "object_digest_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "rt_invariants_digest_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    },

    "determinism_contract": {
      "type": "object",
      "additionalProperties": false,
      "required": ["canonical_json", "stable_sorting", "no_rng", "invariant_diff_defined"],
      "properties": {
        "canonical_json": { "type": "boolean", "const": true },
        "stable_sorting": { "type": "boolean", "const": true },
        "no_rng": { "type": "boolean", "const": true },
        "invariant_diff_defined": { "type": "boolean", "const": true }
      }
    }
  }
}

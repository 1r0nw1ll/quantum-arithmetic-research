{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "GUARDRAIL_REQUEST.v1.schema.json",
  "title": "QA Guardrail Request",
  "description": "Schema for guardrail evaluation requests",
  "type": "object",
  "additionalProperties": false,
  "required": ["planned_move"],
  "properties": {
    "planned_move": {
      "type": "string",
      "minLength": 1,
      "description": "The move to evaluate (e.g., 'sigma(1)', 'mu()')"
    },
    "context": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "active_generators": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "description": "Set of generators currently enabled"
        },
        "instruction_content_cert": {
          "type": "object",
          "description": "Optional cert proving instruction/content separation",
          "properties": {
            "schema_id": { "type": "string" },
            "instruction_domain": {
              "type": "array",
              "items": { "type": "string" }
            },
            "content_domain": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "trace_tail": {
          "type": "array",
          "description": "Recent trace entries for continuity check",
          "items": {
            "type": "object",
            "required": ["move", "fail_type", "invariant_diff"],
            "properties": {
              "move": { "type": "string" },
              "fail_type": { "type": ["string", "null"] },
              "invariant_diff": { "type": "object" }
            }
          }
        },
        "policy": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "allow": {
              "type": "array",
              "items": { "type": "string" },
              "description": "If specified, only these moves/generators are allowed"
            },
            "deny": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Moves/generators that are explicitly denied"
            },
            "required_capability": {
              "type": "string",
              "description": "Capability token required to execute move"
            },
            "allow_after_failure": {
              "type": "boolean",
              "description": "Allow continuation after previous failure"
            }
          }
        },
        "capabilities": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Granted capability tokens"
        }
      }
    },
    "expected_result": {
      "type": "string",
      "enum": ["ALLOW", "DENY"],
      "description": "For fixtures: expected guardrail result"
    },
    "expected_fail_type": {
      "type": "string",
      "description": "For fixtures: expected fail_type when result is DENY"
    }
  }
}

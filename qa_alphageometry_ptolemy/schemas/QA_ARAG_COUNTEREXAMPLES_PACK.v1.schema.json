{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "QA_ARAG_COUNTEREXAMPLES_PACK.v1.schema.json",
  "title": "QA A-RAG Counterexamples Pack v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "arag_semantics_schema_id",
    "store_semantics_schema_id",
    "view_semantics_schema_id",
    "store_root_snapshot",
    "view_root_snapshot",
    "cases",
    "manifest"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "QA_ARAG_COUNTEREXAMPLES_PACK.v1" },
    "arag_semantics_schema_id": { "type": "string", "const": "QA_ARAG_INTERFACE_CERT.v1" },
    "store_semantics_schema_id": { "type": "string", "const": "QA_DATASTORE_SEMANTICS_CERT.v1" },
    "view_semantics_schema_id": { "type": "string", "const": "QA_DATASTORE_VIEW_CERT.v1" },

    "store_root_snapshot": {
      "type": "object",
      "additionalProperties": false,
      "required": ["root_hash", "hash_alg"],
      "properties": {
        "root_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "hash_alg": { "type": "string", "enum": ["sha256"] },
        "snapshot_id": { "type": "string" },
        "keys": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "keys_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    },

    "view_root_snapshot": {
      "description": "Default view root alias. When view_root_snapshots is present, this must mirror KEYWORD_VIEW.",
      "type": "object",
      "additionalProperties": false,
      "required": ["root_hash", "hash_alg"],
      "properties": {
        "root_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "hash_alg": { "type": "string", "enum": ["sha256"] },
        "snapshot_id": { "type": "string" },
        "keys": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "keys_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    },
    "view_root_snapshots": {
      "description": "Optional typed view roots for KEYWORD_VIEW and SEMANTIC_VIEW provenance checks.",
      "type": "object",
      "additionalProperties": false,
      "required": ["KEYWORD_VIEW", "SEMANTIC_VIEW"],
      "properties": {
        "KEYWORD_VIEW": {
          "type": "object",
          "additionalProperties": false,
          "required": ["root_hash", "hash_alg"],
          "properties": {
            "root_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
            "hash_alg": { "type": "string", "enum": ["sha256"] },
            "snapshot_id": { "type": "string" },
            "keys": { "type": "array", "items": { "type": "string", "minLength": 1 } },
            "keys_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
          }
        },
        "SEMANTIC_VIEW": {
          "type": "object",
          "additionalProperties": false,
          "required": ["root_hash", "hash_alg"],
          "properties": {
            "root_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
            "hash_alg": { "type": "string", "enum": ["sha256"] },
            "snapshot_id": { "type": "string" },
            "keys": { "type": "array", "items": { "type": "string", "minLength": 1 } },
            "keys_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
          }
        }
      }
    },

    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "case_id",
          "tamper_mode",
          "expected_fail_type",
          "question",
          "steps",
          "final_answer",
          "claimed_success"
        ],
        "properties": {
          "case_id": { "type": "string", "minLength": 1 },
          "tamper_mode": {
            "description": "Diagnostic subtype only. Do not extend semantics fail_types from tamper_mode.",
            "type": "string",
            "minLength": 1
          },
          "expected_fail_type": { "type": "string", "minLength": 1 },
          "question": { "type": "string", "minLength": 1 },
          "final_answer": { "type": "string", "minLength": 1 },
          "claimed_success": { "type": "boolean" },
          "steps": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["step_index", "tool_name", "view_kind", "query", "retrieved_token_cost", "proof_bundle"],
              "properties": {
                "step_index": { "type": "integer", "minimum": 0 },
                "tool_name": { "type": "string", "enum": ["keyword_search", "semantic_search", "chunk_read"] },
                "view_kind": { "type": "string", "enum": ["KEYWORD_VIEW", "SEMANTIC_VIEW", "CHUNK_STORE"] },
                "query": { "type": "string", "minLength": 1 },
                "retrieved_token_cost": { "type": "integer", "minimum": 0 },
                "note": { "type": "string" },
                "proof_bundle": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["store_root_hash", "view_root_hash"],
                  "properties": {
                    "store_root_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
                    "view_root_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
                    "view_snapshot_id": { "type": "string", "minLength": 1 },
                    "view_lookup": {
                      "anyOf": [
                        { "type": "null" },
                        {
                          "type": "object",
                          "additionalProperties": false,
                          "required": ["view_key", "expected_posting", "view_proof", "store_proofs_by_base_key"],
                          "properties": {
                            "view_key": { "type": "string", "minLength": 1 },
                            "expected_posting": {
                              "anyOf": [
                                { "type": "null" },
                                { "type": "array", "items": { "type": "string", "minLength": 1 } }
                              ]
                            },
                            "view_proof": { "$ref": "QA_VIEW_PROOF.v1.schema.json" },
                            "store_proofs_by_base_key": {
                              "type": "object",
                              "additionalProperties": {
                                "type": "object",
                                "additionalProperties": false,
                                "required": ["record_hash", "proof"],
                                "properties": {
                                  "record_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
                                  "proof": { "$ref": "QA_MERKLE_PROOF.v1.schema.json" }
                                }
                              }
                            }
                          }
                        }
                      ]
                    },
                    "store_reads": {
                      "anyOf": [
                        { "type": "null" },
                        {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": ["base_key", "record_hash", "proof"],
                            "properties": {
                              "base_key": { "type": "string", "minLength": 1 },
                              "record_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
                              "proof": { "$ref": "QA_MERKLE_PROOF.v1.schema.json" }
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "manifest": {
      "type": "object",
      "additionalProperties": false,
      "required": ["hash_alg", "canonical_json_sha256"],
      "properties": {
        "hash_alg": { "type": "string", "enum": ["sha256"] },
        "canonical_json_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    }
  }
}

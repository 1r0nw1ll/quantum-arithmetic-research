{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "QA_THREEJS_SCENE_ADAPTER.v1.schema.json",
  "title": "QA_THREEJS_SCENE_ADAPTER.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "cert_type",
    "cert_id",
    "created_utc",
    "compute_substrate",
    "source_semantics",
    "base_algebra",
    "scene",
    "derivation",
    "result",
    "determinism_contract"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "v1" },
    "cert_type": { "type": "string", "const": "QA_THREEJS_SCENE_ADAPTER.v1" },
    "cert_id": { "type": "string", "pattern": "^[a-zA-Z0-9._-]{8,200}$" },
    "created_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
    },
    "compute_substrate": { "type": "string", "const": "float64" },

    "source_semantics": {
      "type": "object",
      "additionalProperties": false,
      "required": ["upstream", "export"],
      "properties": {
        "upstream": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name"],
          "properties": {
            "name": { "type": "string", "minLength": 1 },
            "repo_url": { "type": "string" },
            "docs_url": { "type": "string" }
          }
        },
        "export": {
          "type": "object",
          "additionalProperties": false,
          "required": ["format", "exported_by"],
          "properties": {
            "format": { "type": "string", "const": "three_scene_export_v1" },
            "exported_by": { "type": "string", "minLength": 1 }
          }
        }
      }
    },

    "base_algebra": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "properties"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "properties": {
          "type": "object",
          "additionalProperties": false,
          "required": ["field", "no_zero_divisors"],
          "properties": {
            "field": { "type": "boolean", "const": true },
            "no_zero_divisors": { "type": "boolean", "const": true }
          }
        }
      }
    },

    "scene": {
      "type": "object",
      "additionalProperties": false,
      "required": ["scene_raw", "scene_raw_sha256"],
      "properties": {
        "scene_raw": { "type": "object" },
        "scene_raw_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    },

    "derivation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["parsed_objects", "steps"],
      "properties": {
        "parsed_objects": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["object_id", "object_type", "vertices", "faces"],
            "properties": {
              "object_id": { "type": "string", "minLength": 1 },
              "object_type": { "type": "string", "enum": ["TRIANGLE", "MESH"] },
              "label": { "type": "string" },
              "vertices": {
                "type": "array",
                "minItems": 3,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["id", "coord"],
                  "properties": {
                    "id": { "type": "string" },
                    "coord": {
                      "type": "array",
                      "minItems": 3,
                      "maxItems": 3,
                      "items": { "type": "number" }
                    }
                  }
                }
              },
              "faces": {
                "type": "array",
                "items": {
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 3,
                  "items": { "type": "string" }
                }
              }
            }
          }
        },
        "steps": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["step_id", "move_id", "inputs", "outputs", "step_hash_sha256"],
            "properties": {
              "step_id": { "type": "string", "minLength": 1 },
              "move_id": {
                "type": "string",
                "enum": [
                  "THREE_PARSE_SCENE",
                  "RT_COMPUTE_TRIANGLE_INVARIANTS",
                  "RT_VALIDATE_LAW_EQUATION"
                ]
              },
              "inputs": { "type": "object" },
              "outputs": { "type": "object" },
              "step_hash_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
            }
          }
        }
      }
    },

    "result": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rt_invariants"],
      "properties": {
        "rt_invariants": {
          "type": "object",
          "additionalProperties": false,
          "required": ["triangles"],
          "properties": {
            "triangles": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["triangle_object_id", "Q", "s"],
                "properties": {
                  "triangle_object_id": { "type": "string", "minLength": 1 },
                  "Q": {
                    "type": "array",
                    "minItems": 3, "maxItems": 3,
                    "items": { "type": "number" }
                  },
                  "s": {
                    "type": "array",
                    "minItems": 3, "maxItems": 3,
                    "items": { "type": "number" }
                  }
                }
              }
            }
          }
        },
        "invariant_diff": { "type": "object" }
      }
    },

    "determinism_contract": {
      "type": "object",
      "additionalProperties": false,
      "required": ["canonical_json", "stable_sorting", "no_rng", "invariant_diff_defined"],
      "properties": {
        "canonical_json": { "type": "boolean", "const": true },
        "stable_sorting": { "type": "boolean", "const": true },
        "no_rng": { "type": "boolean", "const": true },
        "invariant_diff_defined": { "type": "boolean", "const": true }
      }
    }
  }
}
